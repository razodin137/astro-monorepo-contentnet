---
import Header from '../components/Header.astro';
const { title, siteTitle = "Astro Site" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | {siteTitle}</title>
    <slot name="head" />
</head>
<body>
    <Header title={siteTitle} />
    <main>
        <slot />
    </main>
    <footer>
        <p>&copy; {new Date().getFullYear()} {siteTitle} | <a href="/legal">Legal</a></p>
    </footer>
</body>
</html>

<style is:global>
:root {
    --font-base: system-ui, -apple-system, sans-serif;
}
body {
    font-family: var(--font-base);
    margin: 0;
    padding: 0;
    line-height: 1.6;
}
main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
}
footer {
    text-align: center;
    padding: 2rem;
    background: #f4f4f4;
    margin-top: 2rem;
}
footer a {
    color: inherit;
    text-decoration: underline;
}
</style>
