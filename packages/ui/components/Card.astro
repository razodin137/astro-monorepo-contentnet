---
const { data } = Astro.props;
---
<article class="card">
    {data.feature_image && <img src={data.feature_image} alt={data.title} />}
    <div class="card-content">
        <h2>{data.title}</h2>
        <p>{data.excerpt}</p>
        <a href={`/${data.slug}`}>Read more</a>
    </div>
</article>

<style>
.card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
    transition: transform 0.2s;
}
.card:hover {
    transform: translateY(-5px);
}
.card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}
.card-content {
    padding: 1rem;
}
</style>
