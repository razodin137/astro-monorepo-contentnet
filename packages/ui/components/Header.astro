---
const { title } = Astro.props;
---
<header class="site-header">
    <nav>
        <div class="logo">{title}</div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/recipes">Recipes</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/legal">Legal</a></li>
        </ul>
    </nav>
</header>

<style>
.site-header {
    background: var(--header-bg, #333);
    color: white;
    padding: 1rem 0;
}
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}
.logo {
    font-size: 1.5rem;
    font-weight: bold;
}
ul {
    list-style: none;
    display: flex;
    gap: 1rem;
}
a {
    color: white;
    text-decoration: none;
}
</style>
