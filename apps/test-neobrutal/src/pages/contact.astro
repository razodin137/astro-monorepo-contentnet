---
import BaseLayout from '@my-network/ui/BaseLayout.astro';
import ContactInfo from '@my-network/ui/ContactInfo.mdx';
import '../styles/theme.css';

const siteTitle = import.meta.env.SITE_TITLE || "Starter Theme";
---

<BaseLayout title="Contact" siteTitle={siteTitle} description="Get in touch with us.">
    <section class="section">
        <div class="section-header">
            <h2>Get In Touch</h2>
            <p>We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
        </div>

        <div class="contact-container">
            <form class="contact-form" action="#" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Your name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" class="form-control" placeholder="What's this about?">
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" class="form-control" placeholder="Your message..." required></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
            </form>

            <div class="contact-info">
                <h3>Other Ways to Reach Us</h3>
                <ContactInfo />
            </div>
        </div>
    </section>
</BaseLayout>

<style>
.contact-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
}

@media (max-width: 768px) {
    .contact-container {
        grid-template-columns: 1fr;
    }
}

.contact-form {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-color);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

@media (max-width: 500px) {
    .form-row {
        grid-template-columns: 1fr;
    }
}

.contact-info h3 {
    margin-bottom: 1.5rem;
    color: var(--text-color);
}

.info-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    margin-bottom: 1rem;
}

.info-icon {
    font-size: 1.5rem;
}

.info-card h4 {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-muted);
}

.info-card p {
    margin: 0;
    font-weight: 600;
    color: var(--text-color);
}
</style>
