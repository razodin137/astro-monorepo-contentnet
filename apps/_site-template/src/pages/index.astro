---
// Import the "One Script"
import { getSiteContent } from '@my-network/api';
import Card from '@my-network/ui/Card.astro';
import BaseLayout from '@my-network/ui/BaseLayout.astro';
import '../styles/theme.css';

// Run the script (It automatically finds your site's tag in package.json)
const posts = await getSiteContent();
const title = "This Is The Title Of Your Site";
---

<BaseLayout siteTitle={title}>
  <h1>Latest Tech News</h1>
  <div class="grid">
    {posts.map(post => <Card data={post} />)}
    {posts.length === 0 && <p>No posts found for this site tag.</p>}
  </div>
</BaseLayout>

<style>
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
}
h1 {
    color: #d32f2f;
}
</style>
